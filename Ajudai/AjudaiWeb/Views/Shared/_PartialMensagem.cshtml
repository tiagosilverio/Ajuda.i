@if (TempData["Mensagem-Sucesso"] != null)
{
    <script>
        $(document).ready(function () {
            $('.modal-alert').modal('show');
            setTimeout(function () { $('.modal-alert').modal('hide') }, 5000);
        });
    </script>

    <div class="modal fade modal-alert">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content bg-success">
                <div class="modal-header p-b-0" style="border-bottom:none">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body pb-5 pt-0">
                    <div class="modal-body text-light">
                        <div class="row">
                            <div class="col-lg-12 text-center">
                                <h5>@Html.Raw(TempData["Mensagem-Sucesso"])</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

